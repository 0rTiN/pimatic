#!/bin/sh
# run with: curl -s https://raw.github.com/sweetpi/pimatic/development/install/install-git | bash /dev/stdin development
BRANCH=$1
mkdir pimatic-app
cd pimatic-app
for name in pimatic pimatic-cron pimatic-filebrowser pimatic-gpio pimatic-log-reader pimatic-mobile-frontend pimatic-pilight pimatic-ping pimatic-redirect pimatic-rest-api pimatic-sispmctl pimatic-speak-api pimatic-datalogger
do
  echo $name
  npm install git+https://github.com/sweetpi/$name.git#$BRANCH
done
cp -i ./node_modules/pimatic/config_default.json ./config.json
